        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>FormEncodingSetterFilter</filter-name>
        <filter-class>filters.FormEncodingSetterFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>FormEncodingSetterFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>filters.CheckAuthorizationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/create_training_two</url-pattern>
        <url-pattern>/registration</url-pattern>
        <url-pattern>/login</url-pattern>
    </filter-mapping>

</web-app>